<?xml version="1.0" encoding="utf-8"?>
<com.xseed.gamemanager.GameManagerTouchDisabledLinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal"
    android:visibility="invisible">

    <ProgressBar
        style="@style/loadingPageStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/loading_page_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/game_list_empty_text_view_margin_horizontal"
        android:text="@string/loading"
        android:textSize="@dimen/loading_page_Text_size" />

</com.xseed.gamemanager.GameManagerTouchDisabledLinearLayout>